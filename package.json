{
  "name": "jova",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "npx eslint . --ext js,ts,jsx,ts,json --fix",
    "format": "npx prettier --write src/**/*.{js,ts,tsx} && npx prettier --write *.{js,json}"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js}": [
      "npx prettier --write",
      "npx eslint --fix"
    ],
    "*.{js,json}": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "next": "10.0.6",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "eslint": "^7.20.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  }
}
